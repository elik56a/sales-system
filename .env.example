# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/sales_db
DB_POOL_SIZE=50
DB_POOL_MIN_SIZE=10

# API
PORT=3000
JWT_SECRET=your-secret-key-here

# Circuit Breaker
CIRCUIT_BREAKER_TIMEOUT=5000
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Retry Configuration
RETRY_MAX_ATTEMPTS=5
RETRY_BASE_DELAY=100
RETRY_MAX_DELAY=1600

# Logging
LOG_LEVEL=info

# Health Check
HEALTH_CHECK_TIMEOUT=5000

# Mock Queue (for development)
MOCK_QUEUE_ENABLED=true


# Inventory Service Simulation
INVENTORY_FAILURE_RATE=1

# Outbox Publisher
OUTBOX_POLL_INTERVAL=1000
