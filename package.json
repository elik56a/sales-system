{
  "name": "sales-system",
  "version": "1.0.0",
  "description": "Sales System Implementation - Task 2",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "dev:api": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "dev:outbox": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/workers/outboxPublisher.ts",
    "dev:consumer": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/workers/statusConsumer.ts",
    "db:start": "docker run --name postgres -e POSTGRES_PASSWORD=password -p 5432:5432 -d postgres:14 || docker start postgres",
    "db:stop": "docker stop postgres",
    "db:create": "node -r dotenv/config -r ts-node/register -r tsconfig-paths/register src/database/createDb.ts",
    "db:generate": "drizzle-kit generate:pg",
    "db:seed": "node -r dotenv/config -r ts-node/register -r tsconfig-paths/register src/database/seed.ts",
    "db:setup": "pnpm run db:create && pnpm run db:generate && pnpm run db:seed",
    "example:health": "./examples/health-check.sh",
    "example:order": "./examples/create-order.sh",
    "example:load-test": "./examples/load-test.sh",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.25",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.8.0",
    "@types/pg": "^8.10.7",
    "@types/uuid": "^9.0.6",
    "drizzle-kit": "^0.20.18",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@10.22.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "sales",
    "orders",
    "microservice"
  ],
  "author": "Eliyahu Kriel",
  "license": "MIT"
}
